---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { ExercisesContainer } from '../components/React/ExercisesContainer/ExercisesContainer';
import { getCollection } from 'astro:content';
import Footer from '../components/Footer.astro';

const exercises = await getCollection('exercises');
---

<Layout 
  icon="images/favicon.png"
  metaDescription="Respuestas a ejercicios de lógica de programación con JavaScript"
  metaKeywords="JavaScript, Programación, Lógica, Lógica de Programación"
  metaTitle="Ejercicios de lógica con JavaScript"
  metaOGUrl="https://ejercicios-logica-javascript.netlify.app"
  image="https://ejercicios-logica-javascript.netlify.app/images/ejercicios-logica.webp"
>
  <Header />
  <ExercisesContainer exercisesArray={exercises} client:visible />
  <Footer />
</Layout>
