---
import 'bootstrap-icons/font/bootstrap-icons.min.css';
import 'bootstrap/dist/css/bootstrap.min.css'
import '../styles/variables.css'
import ToggleBtn from "../components/ToggleBtn.astro";

interface Props {
	title?: string
	metaDescription: string
	metaKeywords?: string
	metaTitle: string
	metaOGUrl: string
	image?: string
	icon: string
}

const { title, metaDescription, metaKeywords, metaTitle, metaOGUrl, image, icon } = Astro.props;
---


<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href={icon} />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content="Wilber Hernández">
		<meta name="description" content={metaDescription}>
		<meta name="keywords" content={metaKeywords}>
		<meta name="date" content="2025-03-26T23:04:00Z">
		<meta name="robots" content="index, follow">
		<meta name="theme-color" content="#ffffff" id="theme-color-meta">

		<!-- Open Graph -->
		<meta property="og:title" content={metaTitle}>
		<meta property="og:description" content={metaDescription}>
		<meta property="og:image" content={image}>
		<meta property="og:url" content={metaOGUrl}>
		<meta property="og:type" content="website">

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content={metaTitle}>
		<meta name="twitter:description" content={metaDescription}>
		<meta name="twitter:image" content={image}>
		<meta name="twitter:site" content="@wilberdhp">

		<link rel="canonical" href="https://ejercicios-logica-web.vercel.app">
		<link rel="alternate" hreflang="es" href="https://ejercicios-logica-web.vercel.app">

		<title>{title ? `Ejercicios de lógica con JavaScript | ${title}` : "Ejercicios de lógica con JavaScript"}</title>

	</head>
	<body>
		<ToggleBtn />
		<slot />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}

	html {
  	scrollbar-gutter: both-edges;
	}

	body {
		background: var(--background-body);
	}

	h1, h2, h3, h4, p {
		color: var(--color-title)
	}

	header, section {
		padding: 30px 50px;
		min-height: 100vh;
	}

	section {
		padding: 30px 50px;
		max-width: 1440px;
		margin: 0 auto;

		/* @media (width <= 700px) {
			padding: 30px 50px;
		} */
	}
</style>

<script>
	import 'bootstrap/dist/js/bootstrap.min.js';
</script>

<script is:inline type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "WebPage",
		"datePublished": "2025-03-26T23:04:00Z",
		"dateModified": "2025-03-27T00:05:00Z"
	}
	</script>
	