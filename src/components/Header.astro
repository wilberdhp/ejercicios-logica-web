<style>
  header {
    display: flex;

    flex-direction: column;
    align-items: center;
    justify-content: center;

    padding-bottom: 100px;

    border-bottom: 1px solid var(--border-bottom-header);
  }

  h1 {
    max-width: 900px;
    font-size: calc(3rem + 1.5vw);
    text-align: center;
    margin: 30px 0;
  }

  @media (min-width: 1200px) {
    .h1, h1 {
        font-size: 4.5rem;
    }
  }

  .info {
    max-width: 1000px;
    margin: 10px auto;
  }

  .info .about-me {
    font-size: 25px;
  }

  h3 {
    font-size: 30px;
  }

  .socials-container {
    display: flex;
    width: fit-content;
    flex-direction: column;
    justify-content: center;
    /* align-items: center; */
  }

  .socials {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60px;
    gap: 20px;
  }

  .socials-container .social-link {
    display: flex;
    align-items: center;
  }

  a {
    color: var(--color-icons);
    font-size: 25px;
  }
  
  .socials  a {
    transition: all .2s ease;
  }

  .socials  a:hover {
    transform: scale(1.3);
  }

  .arrow-link {
    margin-top: 40px;
  }

  .arrow-down {
    width: 50px;
    cursor: pointer;
    animation: arrow-animation 1s infinite cubic-bezier(0.455, 0.03, 0.515, 0.955) both;
  }

  @keyframes arrow-animation {
    from {
      transform: translateY(0);
    }

    50% {
      transform: translateY(10px);
    }

    to {
      transform: translateY(0);
    }
  }

  .arrow-down:hover {
    animation: none;
  }

</style>

